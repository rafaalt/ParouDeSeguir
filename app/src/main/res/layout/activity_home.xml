<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".HomeActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/ps_logo2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Insira seu UsuÃ¡rio:"
        android:layout_gravity="center"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_marginTop="20dp"
        android:text=""
        android:id="@+id/txtUsername"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnExecute"
        android:text="Buscar"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:backgroundTint="#1D7BC5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/home_txtA"
        android:layout_gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TXTB"
        android:id="@+id/home_txtB"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:textSize="20dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:id="@+id/progressBar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Bt1"
            android:id="@+id/home_btnInfo"
            android:src="@drawable/btninfo50"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Bt2"
            android:id="@+id/home_btnInsta"
            android:src="@drawable/btninsta50"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>